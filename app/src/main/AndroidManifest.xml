<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chatterboi">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
        android:name="com.yalantis.ucrop.UCropActivity"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".afterauthenticated.myProfile"></activity>
        <activity android:name=".afterauthenticated.AddPosts" />
        <activity
            android:name=".afterauthenticated.ChatInterface"
            android:theme="@style/AppTheme3"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".afterauthenticated.HomePageArpit"
            android:launchMode="singleTask" />
        <activity
            android:name=".afterauthenticated.AddGroups"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".Log_in"
            android:launchMode="singleTask" />
        <activity
            android:name=".username_page"
            android:launchMode="singleTask" />
        <activity
            android:name=".Register"
            android:launchMode="singleTask" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5780826959412256~8772327189"/>
    </application>

</manifest>