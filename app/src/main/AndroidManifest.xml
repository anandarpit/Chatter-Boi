<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.chatterboi">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name=".IncomingInvitationActivity"></activity>
        <activity
            android:name=".afterauthenticated.ChatInterface"
            android:theme="@style/AppTheme3"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".afterauthenticated.Requests" />
        <activity android:name=".afterauthenticated.AddPeople" />
        <activity android:name=".afterauthenticated.comments" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".afterauthenticated.myProfile" />
        <activity android:name=".afterauthenticated.AddPosts" />
        <activity
            android:name=".afterauthenticated.GroupChatInterface"
            android:theme="@style/AppTheme3"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".afterauthenticated.HomePageArpit"
            android:launchMode="singleTask" />
        <activity
            android:name=".afterauthenticated.AddGroups"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".Auth.Log_in"
            android:launchMode="singleTask" />
        <activity
            android:name=".Auth.username_page"
            android:launchMode="singleTask" />
        <activity
            android:name=".Auth.Register"
            android:launchMode="singleTask" />
        <activity
            android:name=".SplashScreen.SplashActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5780826959412256~8772327189" />

        <service
            android:name=".MessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>